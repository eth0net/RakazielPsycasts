    <isBad>false</isBad>
    <comps>
      <li Class="RakazielPsycasts.Floramancer.HediffCompProperties_DryadReincarnation">
        <days>1</days>
      </li>
      <li Class="HediffCompProperties_DisappearsOnDeath" />
