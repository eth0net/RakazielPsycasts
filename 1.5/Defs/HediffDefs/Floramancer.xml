    <hediffClass>RakazielPsycasts.Floramancer.Hediff_Floramancer</hediffClass>
    <isBad>False</isBad>
    <comps>
      <li Class="RakazielPsycasts.Floramancer.HediffCompProperties_Floramancer">
        <baseComaDuration>5000</baseComaDuration>
        <comaDurationPerDryad>2500</comaDurationPerDryad>
        <dryadComaDuration>60000</dryadComaDuration>
        <initialDryadBandwidth>1</initialDryadBandwidth>
